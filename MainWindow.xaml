<Window x:Class="ImageProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Azer-Image Processor - Created by Pratya Amrit" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        KeyDown="MainWindow_KeyDown">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="#FF007ACC"/>
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Controls -->
        <Border Grid.Column="0" Background="#FF2D2D30" BorderBrush="#FF3F3F46" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="Azer-Image Processor" 
                             Foreground="White" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Margin="0,0,0,5"
                             HorizontalAlignment="Center"/>

                    <TextBlock Text="Created by Pratya Amrit" 
                             Foreground="#FF007ACC" 
                             FontSize="12" 
                             FontStyle="Italic"
                             Margin="0,0,0,20"
                             HorizontalAlignment="Center"/>

                    <!-- Image Operations -->
                    <GroupBox Header="Image Operations" 
                            Foreground="White" 
                            BorderBrush="#FF007ACC" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <Button x:Name="LoadImageButton" 
                                  Content="📁 Load Image" 
                                  Style="{StaticResource ModernButton}"
                                  Click="LoadImageButton_Click"/>
                            <Button x:Name="CaptureImageButton" 
                                  Content="📷 Capture Image" 
                                  Style="{StaticResource ModernButton}"
                                  Click="CaptureImageButton_Click"/>
                            <Button x:Name="SaveImageButton" 
                                  Content="💾 Save Image" 
                                  Style="{StaticResource ModernButton}"
                                  Click="SaveImageButton_Click"/>
                            <Button x:Name="UndoButton" 
                                  Content="↶ Undo" 
                                  Style="{StaticResource ModernButton}"
                                  Click="UndoButton_Click"
                                  IsEnabled="False"/>
                            <Button x:Name="RedoButton" 
                                  Content="↷ Redo" 
                                  Style="{StaticResource ModernButton}"
                                  Click="RedoButton_Click"
                                  IsEnabled="False"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Basic Adjustments -->
                    <GroupBox Header="Basic Adjustments" 
                            Foreground="White" 
                            BorderBrush="#FF007ACC" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Brightness" Foreground="White" Margin="5"/>
                            <Slider x:Name="BrightnessSlider" 
                                  Style="{StaticResource SliderStyle}"
                                  Minimum="-100" Maximum="100" Value="0"
                                  ValueChanged="AdjustmentSlider_ValueChanged"/>

                            <TextBlock Text="Contrast" Foreground="White" Margin="5"/>
                            <Slider x:Name="ContrastSlider" 
                                  Style="{StaticResource SliderStyle}"
                                  Minimum="-100" Maximum="100" Value="0"
                                  ValueChanged="AdjustmentSlider_ValueChanged"/>

                            <TextBlock Text="Saturation" Foreground="White" Margin="5"/>
                            <Slider x:Name="SaturationSlider" 
                                  Style="{StaticResource SliderStyle}"
                                  Minimum="-100" Maximum="100" Value="0"
                                  ValueChanged="AdjustmentSlider_ValueChanged"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Filters -->
                    <GroupBox Header="Filters and Effects" 
                            Foreground="White" 
                            BorderBrush="#FF007ACC" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Blur Amount" Foreground="White" Margin="5"/>
                            <Slider x:Name="BlurSlider" 
                                  Style="{StaticResource SliderStyle}"
                                  Minimum="0" Maximum="10" Value="0"
                                  ValueChanged="AdjustmentSlider_ValueChanged"
                                  ToolTip="Strong blur effect - even small values create dramatic blur"/>

                            <Button x:Name="GrayscaleButton" 
                                  Content="🎨 Grayscale" 
                                  Style="{StaticResource ModernButton}"
                                  Click="GrayscaleButton_Click"/>
                            <Button x:Name="SepiaButton" 
                                  Content="🟤 Sepia" 
                                  Style="{StaticResource ModernButton}"
                                  Click="SepiaButton_Click"/>
                            <Button x:Name="InvertButton" 
                                  Content="🔄 Invert Colors" 
                                  Style="{StaticResource ModernButton}"
                                  Click="InvertButton_Click"/>
                            <Button x:Name="EdgeDetectionButton" 
                                  Content="📐 Edge Detection" 
                                  Style="{StaticResource ModernButton}"
                                  Click="EdgeDetectionButton_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Reset -->
                    <Button x:Name="ResetButton" 
                          Content="🔄 Reset All" 
                          Style="{StaticResource ModernButton}"
                          Background="#FFDC3545"
                          Click="ResetButton_Click"/>
                    <Button x:Name="AboutButton" 
                          Content="ℹ️ About" 
                          Style="{StaticResource ModernButton}"
                          Background="#FF6C757D"
                          Click="AboutButton_Click"
                          Margin="5,10,5,5"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Center Panel - Image Display -->
        <Grid Grid.Column="1" Background="#FF1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="Image Preview" 
                         Foreground="White" 
                         FontSize="16" 
                         FontWeight="Bold" 
                         VerticalAlignment="Center"
                         Margin="0,0,20,0"/>
                <TextBlock x:Name="ZoomLevelText"
                         Text="100%" 
                         Foreground="#FF007ACC" 
                         FontSize="14" 
                         VerticalAlignment="Center"/>
            </StackPanel>

            <Border Grid.Row="1" 
                  Background="#FF2D2D30" 
                  BorderBrush="#FF3F3F46" 
                  BorderThickness="1" 
                  Margin="5">
                <ScrollViewer x:Name="ImageScrollViewer" 
                            HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Auto"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            MouseWheel="ImageScrollViewer_MouseWheel"
                            MouseLeftButtonDown="ImageScrollViewer_MouseLeftButtonDown"
                            MouseLeftButtonUp="ImageScrollViewer_MouseLeftButtonUp"
                            MouseMove="ImageScrollViewer_MouseMove"
                            MouseLeave="ImageScrollViewer_MouseLeave">
                    <Image x:Name="PreviewImage" 
                         Stretch="Uniform" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"
                         RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="ImageScaleTransform"/>
                                <TranslateTransform x:Name="ImageTranslateTransform"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </ScrollViewer>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="🔍+ Zoom In" 
                      Style="{StaticResource ModernButton}"
                      Click="ZoomInButton_Click"
                      ToolTip="Zoom In (Ctrl + Mouse Wheel)"/>
                <Button Content="🔍- Zoom Out" 
                      Style="{StaticResource ModernButton}"
                      Click="ZoomOutButton_Click"
                      ToolTip="Zoom Out (Ctrl + Mouse Wheel)"/>
                <Button Content="📏 Fit Window" 
                      Style="{StaticResource ModernButton}"
                      Click="FitToWindowButton_Click"
                      ToolTip="Fit image to window"/>
                <Button Content="1:1 Actual Size" 
                      Style="{StaticResource ModernButton}"
                      Click="ActualSizeButton_Click"
                      ToolTip="Show actual size"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel - Information -->
        <Border Grid.Column="2" Background="#FF2D2D30" BorderBrush="#FF3F3F46" BorderThickness="1,0,0,0">
            <StackPanel Margin="15">
                <TextBlock Text="Image Information" 
                         Foreground="White" 
                         FontSize="16" 
                         FontWeight="Bold" 
                         Margin="0,0,0,15"/>

                <GroupBox Header="Properties" 
                        Foreground="White" 
                        BorderBrush="#FF007ACC" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="ImageSizeText" 
                                 Text="Size: No image loaded" 
                                 Foreground="White" 
                                 Margin="5"/>
                        <TextBlock x:Name="ImageFormatText" 
                                 Text="Format: -" 
                                 Foreground="White" 
                                 Margin="5"/>
                        <TextBlock x:Name="FileSizeText" 
                                 Text="File Size: -" 
                                 Foreground="White" 
                                 Margin="5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Edit History (Ctrl+Z/Ctrl+Y)" 
                        Foreground="White" 
                        BorderBrush="#FF007ACC">
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="HistoryListBox" 
                               Background="Transparent" 
                               Foreground="White" 
                               BorderThickness="0"
                               SelectionChanged="HistoryListBox_SelectionChanged"/>
                    </ScrollViewer>
                </GroupBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
