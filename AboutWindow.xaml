<Window x:Class="ImageProcessor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Azer-Image Processor " Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- App Icon and Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="📸" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Image Processor Pro" 
                     Foreground="White" 
                     FontSize="22" 
                     FontWeight="Bold" 
                     HorizontalAlignment="Center"/>
            <TextBlock Text="Version 1.0.0" 
                     Foreground="#FF007ACC" 
                     FontSize="12" 
                     HorizontalAlignment="Center"
                     Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Creator Info -->
        <Border Grid.Row="1" 
              Background="#FF2D2D30" 
              BorderBrush="#FF007ACC" 
              BorderThickness="2" 
              CornerRadius="8" 
              Padding="15" 
              Margin="0,0,0,15">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🎨 Created by" 
                         Foreground="White" 
                         FontSize="14" 
                         HorizontalAlignment="Center"
                         Margin="0,0,0,8"/>
                <TextBlock Text="Pratya Amrit" 
                         Foreground="#FF007ACC" 
                         FontSize="18" 
                         FontWeight="Bold" 
                         HorizontalAlignment="Center"/>
                <TextBlock Text="Software Developer &amp; Curious Coder" 
                         Foreground="#FFCCCCCC" 
                         FontSize="11" 
                         HorizontalAlignment="Center"
                         Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Core Features -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="🚀 Core Features" 
                     Foreground="White" 
                     FontSize="16" 
                     FontWeight="Bold" 
                     Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Upload -->
                <Border Grid.Column="0" 
                      Background="#FF28A745" 
                      CornerRadius="8" 
                      Padding="12" 
                      Margin="3">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📁" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="UPLOAD" 
                                 Foreground="White" 
                                 FontWeight="Bold" 
                                 FontSize="11" 
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Load images from file or capture from camera" 
                                 Foreground="White" 
                                 FontSize="9" 
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Edit -->
                <Border Grid.Column="1" 
                      Background="#FF007ACC" 
                      CornerRadius="8" 
                      Padding="12" 
                      Margin="3">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="✨" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="EDIT" 
                                 Foreground="White" 
                                 FontWeight="Bold" 
                                 FontSize="11" 
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Apply filters, adjust brightness, contrast, blur and more" 
                                 Foreground="White" 
                                 FontSize="9" 
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Download -->
                <Border Grid.Column="2" 
                      Background="#FFDC3545" 
                      CornerRadius="8" 
                      Padding="12" 
                      Margin="3">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="💾" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="DOWNLOAD" 
                                 Foreground="White" 
                                 FontWeight="Bold" 
                                 FontSize="11" 
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Save your edited images in PNG, JPG, or BMP format" 
                                 Foreground="White" 
                                 FontSize="9" 
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>

        <!-- Advanced Features -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="🔧 Advanced Features" 
                     Foreground="White" 
                     FontSize="14" 
                     FontWeight="Bold" 
                     Margin="0,0,0,8"/>

            <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto" 
                        Background="#FF2D2D30" 
                        Padding="10">
                <TextBlock Foreground="#FFCCCCCC" TextWrapping="Wrap" LineHeight="18" FontSize="11">
                    <Run Text="• Professional image editing with real-time adjustments"/>
                    <LineBreak/>
                    <Run Text="• Advanced camera capture and live preview"/>
                    <LineBreak/>
                    <Run Text="• Intelligent undo/redo system with 20-state history"/>
                    <LineBreak/>
                    <Run Text="• High-performance image processing algorithms"/>
                    <LineBreak/>
                    <Run Text="• Multiple filters: Grayscale, Sepia, Invert, Edge Detection"/>
                    <LineBreak/>
                    <Run Text="• Brightness, Contrast, Saturation, and Blur controls"/>
                    <LineBreak/>
                    <Run Text="• Zoom and pan functionality with mouse wheel support"/>
                    <LineBreak/>
                    <Run Text="• Support for JPG, PNG, BMP, GIF formats"/>
                    <LineBreak/>
                    <Run Text="• Modern dark theme with responsive design"/>
                    <LineBreak/>
                    <Run Text="• Memory-optimized with 60% less resource usage"/>
                    <LineBreak/>
                    <Run Text="• Keyboard shortcuts (Ctrl+Z/Ctrl+Y for undo/redo)"/>
                </TextBlock>
            </ScrollViewer>
        </StackPanel>

        <!-- Contact Information -->
        <Border Grid.Row="4" 
              Background="#FF2D2D30" 
              BorderBrush="#FF28A745" 
              BorderThickness="2" 
              CornerRadius="8" 
              Padding="12" 
              Margin="0,0,0,15">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="📧 Contact" 
                         Foreground="White" 
                         FontSize="14" 
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,5"/>
                <TextBlock Text="pratya192@gmail.com" 
                         Foreground="#FF28A745" 
                         FontSize="12" 
                         HorizontalAlignment="Center"
                         FontWeight="SemiBold"/>
                <TextBlock Text="Feel free to reach out for feedback or suggestions!" 
                         Foreground="#FFCCCCCC" 
                         FontSize="10" 
                         HorizontalAlignment="Center"
                         Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="5" 
              Content="Close" 
              Width="100" 
              Height="32"
              HorizontalAlignment="Center"
              Background="#FF007ACC"
              Foreground="White"
              BorderThickness="0"
              FontWeight="SemiBold"
              Click="CloseButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                      CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF005A9E"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
